<!doctype html>

<html lang="tr">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>LOWERS Hack Style</title>
  <style>
    body {
      margin: 0;
      height: 100vh;
      background: #000;
      display: flex;
      align-items: center;
      justify-content: center;
      overflow: hidden;
      font-family: monospace;
      color: #33ff77;
    }video {
  position: absolute;
  width: 100%;
  height: 100%;
  object-fit: cover;
  z-index: 1;
}

.overlay {
  position: relative;
  z-index: 2;
  text-align: center;
}

.logo {
  font-size: 80px;
  letter-spacing: 8px;
  color: transparent;
  background: linear-gradient(90deg, #33ff77, #00e6ff);
  -webkit-background-clip: text;
  margin-bottom: 20px;
  opacity: 0;
}

.cursor {
  display: inline-block;
  width: 12px;
  background-color: #33ff77;
  animation: blink 0.8s steps(1) infinite;
}

@keyframes blink {
  50% { opacity: 0; }
}

  </style>
</head>
<body>
  <video id="introVideo" autoplay muted>
    <source src="assets/ssstik.io_@l7m7nal_1756413925354.mp4" type="video/mp4">
    Your browser does not support HTML5 video.
  </video>  <div class="overlay">
    <div id="logo" class="logo">LOWERS</div>
    <div id="typed"></div>
  </div>  <script>
    const video = document.getElementById('introVideo');
    const logo = document.getElementById('logo');
    const typed = document.getElementById('typed');
    const text = 'LOWERS';

    video.onended = () => {
      logo.style.opacity = 1;
      typeWriter(text, typed, 0);
    };

    function typeWriter(text, el, i) {
      if (i < text.length) {
        el.innerHTML += text.charAt(i);
        el.innerHTML += '<span class="cursor"></span>';
        setTimeout(() => {
          el.innerHTML = el.innerHTML.replace('<span class="cursor"></span>', '');
          typeWriter(text, el, i + 1);
        }, 150);
      } else {
        el.innerHTML += ''; // cursor removed after typing
      }
    }
  </script></body>
</html>
